/* pages/item-category/item-category.wxss */
page {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
}

.aside {
  width: 180rpx;
  height: 100%;
  background-color: #f4f5f9;
  flex-shrink: 0;
}

.content {
  width: calc(100% - 180rpx);
  height: 100%;
  background-color: pink;
  padding: 0 30rpx;
  box-sizing: border-box;
  overflow: scroll;
}

.nav-item {
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #666;
  position: relative;
}

.nav-item.active {
  color: #eb4f53;
  background-color: #fff;
}

.nav-item.active .line {
  background-color: #eb4f53;
}

.nav-item .line {
  width: 4rpx;
  height: 40rpx;
  background-color: transparent;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.banner {
  width: 510rpx;
  height: 200rpx;
  background-color: #f4f5f9;
  border-radius: 8rpx;
  margin-bottom: 50rpx;
}

.img {
  width: 100%;
  height: 100%;
}
.items-outer{
  margin-bottom: 92rpx;
}
.title {
  height: 28rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: 700;
}

.item-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f4f5f9;
}

.items {
  padding-left: 20rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.item {
  width: 100rpx;
  height: 138rpx;
  /* background-color: cyan; */
  margin-top: 50rpx;
  margin-right: 94rpx;
}

.items .item:nth-child(3n) {
  margin-right: 0;
}

.item-name {
  height: 26rpx;
  line-height: 26rpx;
  font-size: 26rpx;
  color: #222;
  text-align: center;
  white-space: nowrap;
  margin-top: 16rpx;
}
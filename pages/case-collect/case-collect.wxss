/* pages/case-collect/case-collect.wxss */
.top-bg {
  width: 100%;
  height: 1290rpx;
  background: url("http://img.yixingwx.com/case-collect/1-2-3.png") center no-repeat;
  background-size: 100%;
}

.bottom-bg {
  padding-bottom: 160rpx;
  background: linear-gradient(to bottom, #AF0819 0%, #8E0411 100%);
}

.mid-img {
  width: 656rpx;
  height: 306rpx;
  margin: 0 auto;
  margin-bottom: 15rpx;
}

.bottom-img {
  width: 656rpx;
  height: 2013rpx;
  margin: 0 auto;
}

.mid-img image,
.bottom-img image {
  width: 100%;
  height: 100%;
}

.bottom-tip {
  width: 100%;
  height: 264rpx;
  line-height: 264rpx;
  font-size: 36rpx;
  letter-spacing: 2rpx;
  color: #DABDBE;
  text-align: center;
}

.sigup-btn {
  width: 100%;
  height: 160rpx;
  background-color: #fff;
  padding-top: 30rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
}

.btn-info {
  width: 520rpx;
  height: 78rpx;
  margin: 0 auto;
  font-size: 32rpx;
  color: #fff;
  line-height: 78rpx;
  text-align: center;
  background: linear-gradient(171deg, #ECBC9B 0%, #D29973 100%);
  box-shadow: 0px 3px 7px 0px rgba(0, 0, 0, 0.35);
}

/* 表单 */
.outer{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}
.form {
  width: 540rpx;
  height: 540rpx;
  box-sizing: border-box;
  background-color: #fff;
  border: solid 1rpx #999;
  border-radius: 6rpx;
  overflow: hidden;
  position: absolute;
  top:25%;
  left: 50%;
  transform: translateX(-50%);
}


.title {
  height: 68rpx;
  background-color: #a90310;
  text-align: center;
  line-height: 68rpx;
  color: #fee1b4;
  letter-spacing: 2rpx;
  font-size: 32rpx;
}

.title text {
  font-size: 34rpx;
}

.form-info {
  padding-top: 60rpx;
  padding-right: 124rpx;
  box-sizing: border-box;
}


.item {
  width: 100%;
  height: 68rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  /* background-color: pink; */
  margin-bottom: 30rpx;
}

.left {
  width: 166rpx;
  height: 68rpx;
  padding-right: 18rpx;
  text-align: right;
  line-height: 68rpx;
  box-sizing: border-box;
  /* background-color: cyan */
}

.right {
  width: 360rpx;
  height: 68rpx;
  background-color: #f5f6f8;
  border-radius: 4rpx;
  box-sizing: border-box;
  /* border: solid 1rpx #999; */
}

.right .ipt {
  width: 100%;
  height: 100%;
  padding-left: 22rpx;
  /* background-color: lime */
}

.item.bottom {
  height: 132rpx;
  align-items: flex-start;
  margin-bottom: 42rpx;
}

.right.text {
  width: 360rpx;
  height: 132rpx;
  border-radius: 4rpx;
  background-color: #f5f6f8;
  /* border: solid 1rpx #999; */
}

.submit {
  width: 320rpx;
  height: 68rpx;
  background: #B00618;
  border-radius: 4px;
  text-align: center;
  line-height: 68rpx;
  color: #fff;
  font-size: 28rpx;
  margin: 0 auto;
  margin-top: 72rpx;
}

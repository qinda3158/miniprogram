/* pages/search/index.wxss */
.search-outer{
  width: 690rpx;
  height: 68rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
  margin-top: 20rpx;
}
.search {
  width: 610rpx;
  height: 68rpx;
  font-size: 26rpx;
  color: #999;
  background-color: #f2f5f7;
  border-radius: 8rpx;
  position: relative;
  line-height: 60rpx;
  padding-left: 70rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: pink;
}

.search input {
  width: 100%;
  height: 100%;
}

.input-icon {
  width: 24rpx;
  height: 27rpx;
  position: absolute;
  top: 50%;
  left: 32rpx;
  transform: translateY(-50%);
}
.cancel-input{
  width: 34rpx;
  height: 34rpx;
  background-color: #c3c4c7;
  color: #fff;
  font-size: 34rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 50%;
  flex-shrink: 0;
}
.cancel-btn{
  width: 60rpx;
  height: 100%;
  font-size: 28rpx;
  color: #666;
  letter-spacing: 1rpx;
  text-align: right;
  line-height: 68rpx;
}
/* 最近搜索 */
.title {
  height: 32rpx;
  line-height: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-weight: 700;
  margin-bottom: 30rpx;
  margin-top: 60rpx;
}

.search-l {
  font-size: 30rpx;
  color: #333;
}

.del-icon {
  width: 28rpx;
  height: 28rpx;
}

.history-s, .hot-see {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 0 15rpx;
  box-sizing: border-box;
  margin-bottom: 74rpx;
  /* overflow: hidden; */
}


.hot-see {
  margin-bottom: 60rpx;
}

.search-item-outer {
  padding-left: 14rpx;
  padding-right: 14rpx;
}



.search-item, .hot-item {
  height: 54rpx;
  /* display: inline-block; */
  line-height: 54rpx;
  padding-left: 36rpx;
  padding-right: 36rpx;
  border-radius: 8rpx;
  background-color: #edf1f3;
  color: #333;
  font-size: 26rpx;
  margin-top: 30rpx;
  position: relative;
}



.close {
  width: 30rpx;
  height: 30rpx;
  font-size: 30rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 30rpx;
  background-color: #ccc;
  color: #fff;
  position: absolute;
  top: -8rpx;
  right: -8rpx;
}

.hot-item {
  margin: 0 14rpx;
  margin-top: 30rpx;
}

.search-r {
  font-size: 24rpx;
  color: #999;
  font-weight: 400;
}

.fresh-icon {
  width: 22rpx;
  height: 22rpx;
  margin-left: 12rpx;
}

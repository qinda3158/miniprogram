  content: "\e6b4";
}

.hot-band {
  height: 30rpx;
  padding-left: 30rpx;
  line-height: 30rpx;
  color: #222;
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 30rpx;
}

.hot-good-item {
  width: 662rpx;
  height: 140rpx;
  padding-left: 36rpx;
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 40rpx;
}
.band-num{
  padding-top: 40rpx;
  color: #b7bfc6;
  font-size: 36rpx;

}
.hot-outer .hot-good-item:nth-child(1) .band-num{
  color: #eb4f53;
}
.hot-outer .hot-good-item:nth-child(2) .band-num{
  color: #f19129;
}
.hot-outer .hot-good-item:nth-child(3) .band-num{
  color: #f3c948;
}
.icon-guan{
  height: 14rpx;
  line-height: 18rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.band-num .num{
  height: 28rpx;
  line-height: 28rpx;
  font-weight: 700;
}
.hot-good-item .good-img {
  width: 140rpx;
  height: 140rpx;
  margin: 0 40rpx;
  flex-shrink: 0;
  background-color: pink;
}

.hot-good-item .good-img image {
  width: 100%;
  height: 100%;
}
.goods-desc{
padding-top: 22rpx;
}
.goods-title {
  width: 386rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 700;
  margin-bottom: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  transform: translateX(-14rpx);
}

.goods-sell-num {
  height: 26rpx;
  line-height: 26rpx;
  font-size: 26rpx;
  color: #999;
}
/* 搜索呈现页 */
.search-page{
  padding: 0 30rpx;
  box-sizing: border-box;
}


<!--pages/search/result.wxml-->
<view class="search-outer">
	<view class="search">
		<input placeholder="试试搜 商品/项目/案例" name="search" value="{{searchValue}}" confirm-type="search" bindinput="searchInput" bindconfirm="toSearchList"></input>
		<image class="input-icon" src="http://img.yixingwx.com/home/search-icon.png"></image>
		<view wx:if="{{searchValue!=''}}" class="cancel-input" bindtap="cancelInput">×</view>
	</view>
	<view class="cancel-btn">取消</view>
</view>
<view class="tab-list">
	<block wx:for="{{tabList}}" wx:key="index">
		<view class="tab-item {{currentIndex==index?'active':''}}" data-idx="{{index}}" bindtap="changeTab">{{item}}</view>
	</block>
</view>
<!-- 商品列表 -->
<item-title wx:if="{{currentIndex==0}}" titleLeft="{{titleProduct}}">
</item-title>
<block wx:if="{{currentIndex==1||currentIndex==0}}">
